# A sample Makefile for building Google Test and using it in user
# tests.  Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
TESTS = test/build/metrictemp test/build/elasticsearch

INCLUDE_DIRS += libs/ArduinoJson/src
CPP_INCLUDES := $(foreach dir,$(INCLUDE_DIRS) $(USER_INC_DIRS),-I$(dir))

GTEST_DIR = test/googletest/googletest/
GMOCK_DIR = test/googletest/googlemock/

# Where to find test code.
TEST_DIR = ./test

# Where to put test artifacts
TEST_BUILD_DIR = ./test/build

# Where to find the application code.
APP_SRC_DIR = ./src
APP_INC_DIR = ./include

# Flags passed to the preprocessor.
# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
CPPFLAGS += -isystem $(GTEST_DIR)/include
CPPFLAGS += -isystem $(GMOCK_DIR)/include

# Flags passed to the C++ compiler.
CXXFLAGS += -std=c++11 -g -Wall -Wextra $(CPP_INCLUDES) -pthread -lpthread -I$(APP_INC_DIR) -DUNITTEST


# All Google Test headers.  Usually you shouldn't change this
# definition.
GTEST_HEADERS = $(GTEST_DIR)/include/gtest/*.h \
                $(GTEST_DIR)/include/gtest/internal/*.h
                
GMOCK_HEADERS = $(GMOCK_DIR)/include/gmock/*.h \
                $(GMOCK_DIR)/include/gmock/internal/*.h \
                $(GTEST_HEADERS)

$(shell mkdir -p test/build)

all: all-tests

all-tests : $(TESTS)

clean-tests : clean

clean:
	rm -f $(TESTS) $(TEST_BUILD_DIR)/*.a $(TEST_BUILD_DIR)/*.o $(TEST_BUILD_DIR)/*.d gmock.a gmock_main.a *.o

GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)
GMOCK_SRCS_ = $(GMOCK_DIR)/src/*.cc $(GMOCK_HEADERS)

$(TEST_BUILD_DIR)/gtest-all.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
             $(GTEST_DIR)/src/gtest-all.cc -o $@

$(TEST_BUILD_DIR)/gtest_main.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
             $(GTEST_DIR)/src/gtest_main.cc -o $@

$(TEST_BUILD_DIR)/gtest.a : $(TEST_BUILD_DIR)/gtest-all.o
	$(AR) $(ARFLAGS) $@ $^

$(TEST_BUILD_DIR)/gtest_main.a : $(TEST_BUILD_DIR)/gtest-all.o \
                                 $(TEST_BUILD_DIR)/gtest_main.o
	$(AR) $(ARFLAGS) $@ $^

### gmock ###

$(TEST_BUILD_DIR)/gmock-all.o : $(GMOCK_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) -I$(GMOCK_DIR) $(CXXFLAGS) \
            -c $(GMOCK_DIR)/src/gmock-all.cc -o $@

$(TEST_BUILD_DIR)/gmock_main.o : $(GMOCK_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) -I$(GMOCK_DIR) $(CXXFLAGS) \
            -c $(GMOCK_DIR)/src/gmock_main.cc -o $@

$(TEST_BUILD_DIR)/gmock.a : $(TEST_BUILD_DIR)/gmock-all.o \
                            $(TEST_BUILD_DIR)/gtest-all.o
	$(AR) $(ARFLAGS) $@ $^

$(TEST_BUILD_DIR)/gmock_main.a : $(TEST_BUILD_DIR)/gmock-all.o \
                                 $(TEST_BUILD_DIR)/gtest-all.o \
                                 $(TEST_BUILD_DIR)/gmock_main.o
	$(AR) $(ARFLAGS) $@ $^

### MetricTemp ###
	
$(TEST_BUILD_DIR)/metrictemp_unittest.o : $(TEST_DIR)/metrictemp_unittest.cpp \
                                          $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(TEST_DIR)/metrictemp_unittest.cpp -o $@

$(TEST_BUILD_DIR)/MetricTemp.cpp.o : src/MetricTemp.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $^ -o $@

$(TEST_BUILD_DIR)/metrictemp : $(TEST_BUILD_DIR)/metrictemp_unittest.o \
                               $(TEST_BUILD_DIR)/gtest_main.a \
                               $(TEST_BUILD_DIR)/MetricTemp.cpp.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS)  $^ -o $@	
	
### Elasticsearch ###
	
$(TEST_BUILD_DIR)/elasticsearch_unittest.o : $(TEST_DIR)/elasticsearch_unittest.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $^ -o $@

$(TEST_BUILD_DIR)/Elasticsearch.cpp.o : src/Elasticsearch.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $^ -o $@

$(TEST_BUILD_DIR)/elasticsearch : $(TEST_BUILD_DIR)/elasticsearch_unittest.o \
                                  $(TEST_BUILD_DIR)/gtest_main.a \
                                  $(TEST_BUILD_DIR)/gmock_main.a \
                                  $(TEST_BUILD_DIR)/Elasticsearch.cpp.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $^ -o $@
